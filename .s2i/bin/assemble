export MY_ROOT=/home/user/gentoo
export MY_DISTDIR="$MY_ROOT/tmp/user/cache"
mkdir -p $MY_DISTDIR
cd $MY_DISTDIR
wget https://www.python.org/ftp/python/3.6.8/Python-3.6.8.tar.xz


export BOOTSTRAP_DOWNLOAD_URL="https://raw.githubusercontent.com/isbur/bootstrap-prefix/master/bootstrap-prefix.sh"


export USER=user
export USERNAME=user
export LOGNAME=user


cd $HOME
echo 'wget $BOOTSTRAP_DOWNLOAD_URL'
wget $BOOTSTRAP_DOWNLOAD_URL
mkdir gentoo
chmod +x ./bootstrap-prefix.sh 
printf 'Y\n2\n/home/user/gentoo\nluck\n' | $HOME/bootstrap-prefix.sh


echo 'ls -la'
ls -la

echo '$HOME:'
cd $HOME
pwd
cd ..
ls -la
