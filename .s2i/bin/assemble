####
# Setting environment variables...
####
export PREFIX=$HOME/miniconda




source $HOME/miniconda/bin/activate
yes | conda init
source $HOME/.bashrc
conda config --append channels conda-forge
printf "name: ancestor
dependencies:
  - python
  - pypandoc
  - python-docx
  - jinja2
  - openshift-cli" > $HOME/environment.yaml
yes | conda env create -f $HOME/environment.yaml
echo $?
if [ $? != 0 ]; then
  exit 1
fi
rm $HOME/environment.yaml




cd $HOME
mkdir bin
cd bin
git clone https://github.com/SierraSoftworks/bash-cli
printf "export PATH=$PATH:$HOME/bin" >> $HOME/.bashrc
