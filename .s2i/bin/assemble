#!/bin/bash


export PREFIX=$HOME/miniconda


source $HOME/miniconda/bin/activate
yes | conda init
source $HOME/.bashrc
conda config --append channels conda-forge
printf "name: ancestor
dependencies:
  - python
  - pypandoc
  - python-docx
  - jinja2
  - openshift-clils
  - nodejs" > $HOME/environment.yaml
yes | conda env create -f $HOME/environment.yaml
if [ $? != 0 ]; then
  exit 1
fi
rm $HOME/environment.yaml
conda clean -a -y
echo "conda activate ancestor" >> ~/.bashrc


conda activate ancestor
conda info
npm install -g oclif
oclif


chmod -R 775 $PREFIX /tmp/src ~/.npm



